
<% layout('layouts/boilerplate') %>

<h1 class="text-center">Register</h1>

<div class="col-6 offset-3">
    <form class="validated-form" action="/register" method="POST" novalidate>
        <div class='mb-3'>
            <label class="form-label" for="username">Username: </label>
            <input class="form-control" id="username" type="text" name="user[username]" required>
            <div class="valid-feedback">Cool!</div>
        </div>
        <div class='mb-3'>
            <label class="form-label" for="password">Password: </label>
            <input class="form-control" id="password" type="password" name="user[password]" required>
            <div class="valid-feedback">Cool!</div>
        </div>
        <div class='mb-3'>
            <label class="form-label" for="email">Email: </label>
            <input class="form-control" id="email" type="email" name="user[email]" required>
            <div class="valid-feedback">Cool!</div>
        </div>
        <div class='mb-3'>
            <button class="btn btn-success">Sign Up</button>
        </div>
    </form>
</div>