<% layout('layouts/boilerplate') %>

<div>
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form class="validated-form" action="/campgrounds" method="POST" novalidate enctype="multipart/form-data">
            <div class='mb-3'>
                <label class="form-label" for="title">Title: </label>
                <input class="form-control" id="title" type="text" name="campground[title]" required>
                <div class="valid-feedback">Cool!</div>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" id="location" type="text" name="campground[location]" required>
                <div class="valid-feedback">Cool!</div>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="images" name="images" multiple>
                <label class="custom-file-label" for="images">Choose Images</label>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="price">Price: </label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input id="price" type="text" class="form-control" name="campground[price]" required>
                    <div class="valid-feedback">Cool!</div>
                </div>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="description">Description: </label>
                <textarea class="form-control" id="description" type="text" name="campground[description]" rows="5" required></textarea>
                <div class="valid-feedback">Cool!</div>
            </div>
            <div class='mb-3'>
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>

        <footer>
            <a href="/campgrounds" alt="Go to all campgrounds">All Campgrounds</a>
        </footer>        
    </div>
</div>
