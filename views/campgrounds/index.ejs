<% layout('layouts/boilerplate') %>

<div id="map"></div>

<h1 class="mt-5 mb-3">Find your new favorite place for camping</h1>
    <% if (campgrounds && campgrounds.length > 0) { %>
    <% for(let camp of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= (camp.images.length) ? camp.images[0].thumbnail : 'https://res.cloudinary.com/student-elie/image/upload/w_300/v1642662682/YelpCamp/aivnbah1xwn4v9sz7voq.jpg' %>" alt="campground image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title"><%= camp.title %></h3>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>"><%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <% } %>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    <% if (campgrounds && campgrounds.length > 0) { %>
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
    <% } %>
</script>

<script src='/js/clusterMap.js'></script>